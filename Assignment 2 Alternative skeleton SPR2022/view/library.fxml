<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="center" styleClass="root" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.171" fx:controller="controller.LibraryController">
    <HBox alignment="CENTER" spacing="15" styleClass="header" stylesheets="@style.css">
      <children>
         <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
            <image>
               <Image url="@UTS-logo.png" />
            </image>
         </ImageView>
         <Label styleClass="heading" stylesheets="@style.css" text="Library System" />
      </children>
    </HBox>
    
 
    <VBox alignment="center" spacing="20" styleClass="footer">
        <Button fx:id="ViewCatBtn" onAction="#ViewCatalogue" text="Explore Catalogue" />
        <Button fx:id="patronRecordBtn" onAction="#ViewPatronBtn" text="View Patron Record" />
        <Button fx:id="patronRegBtn" onAction="#RegisterPatron" text="Register Patron" />
        <Button onAction="#handleExit" text="Exit" />
    </VBox>

    <stylesheets>
        <URL value="@style.css" />
    </stylesheets>
</VBox>
